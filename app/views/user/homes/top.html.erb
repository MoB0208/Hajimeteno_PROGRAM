<div class="container-fluid">

  <div>
    <% @genres.each do |genre| %>
      <%= link_to genre.name, genres_index_path %>
    <% end %>
  </div>

  <div>
    <% @favorite_posts.each do |post| %>
      <%= link_to post.main_code, posts_show_path %>
      <%= post.title %>
    <% end %>
  </div>

  <div>
    <% @posts.each do |post| %>
      <%= link_to post.main_code, posts_show_path %>
      <%= post.title %>
    <% end %>
  </div>
</div>