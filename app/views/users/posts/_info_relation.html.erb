<!--記事詳細画面関連記事表示用-->
<% if post.any? %>
  <% post.each do |post| %>
  <div class="col rounded bg-light my-3 p-2">
    <h4><%= link_to post.main_code, post_path(post) %></h4>
    <p><%= post.title %></p>
    <p>
      <%= image_tag post.user.get_image, size: "50x50" %>
      <%= post.user.account_name %>
      <%= post.created_at.strftime('%Y/%m/%d') %>
      <%= render '/users/favorites/form', post: post %>
    </p>
    <div>
      <% post.genres.each do |genre| %>
        <span class="rounded bg-secondary text-white mx-1 px-1">
          <%= genre.genre_name %>
        </span>
      <% end %>
    </div>
  </div>
  <% end %>
<% else %>
  <p>該当する記事はありません。</p>
<% end %>