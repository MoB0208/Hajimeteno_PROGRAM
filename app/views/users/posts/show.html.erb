<!--記事の詳細閲覧-->
<div>
  <!--記事-->
  <% @post.each do |post| %>
    <%= post.title %>
    <%= post.main_code %>
    <%= post.genre.genre_name %>
    <%= post.genre.version %>
    <%= post.post_code.code %>
    <%= post.post_code.body %>
  <% end %>
</div>

<div>
  <!--お気に入り-->
  <% render '/favorites/form' %>
</div>

<div>
  <!--同じコードの関連記事-->
  <% @posts.each do |post| %>
    <%= link_to post.main_code, posts_show_path %>
    <%= post.title %>
  <% end %>
</div>
