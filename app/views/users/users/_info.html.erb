<!--会員情報詳細閲覧-->
<div class="mt-3">
  <%= flash[:notice] %>
  <table class="table table-bordered mt-3">
    <colgroup>
      <col class="col-md-3">
      <col class="col-md-6">
    </colgroup>
    <tr>
      <td class="table-warning"></td>
      <td>
        <% if user.image.attached? %>
          <%= image_tag user.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td class="table-warning">アカウント名</td>
      <td><%= @user.account_name %></td>
    </tr>
    <tr>
      <td class="table-warning">生年月日</td>
      <td><%= @user.birthdate %></td>
    </tr>
    <tr>
      <td class="table-warning">メールアドレス</td>
      <td><%= @user.email %></td>
    </tr>
  </table>
</div>
<div>
  <p>アイコンを設定する場合はこちらから</p>
  <%= link_to "編集する", user_infomation_edit_path, class: "btn btn-success text-white edit_user_#{@user.id}" %>
</div>