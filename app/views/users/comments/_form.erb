<!--コメント用-->
<div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <% @post.comments.each do |comment| %>
    <p>
      <%= comment.comment_body %>
      <% if comment.user == current_user %>
        <%= link_to "修正する", edit_post_comment_path(comment.post, comment), class: "btn btn-success" %>
        <%= link_to "削除する", post_comment_path(comment.post, comment), method: :delete, class: "btn btn-danger"  %>
      <% end %>
    </p>
    <p>
      <%= image_tag comment.user.get_image, size: "30x30" %>
      <%= comment.user.account_name %>
    </p>
    <p><%= comment.created_at.strftime('%Y/%m/%d') %></p>
  <% end %>
</div>
<div>
  <%= form_with model: [@post, @comment], url: post_comments_path(post), local:true do |f| %>
    <%= f.text_area :comment_body, rows: '5', placeholder: "コメントはこちら" %>
    <%= f.submit "送信する", class: "btn btn-success" %>
  <% end %>
</div>