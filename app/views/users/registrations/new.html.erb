<!--新規登録画面-->
<div class="container-fluid">
  <div class="mx-auto pt-5 bg-white">
    <h3>新規会員登録</h3>
    <div class="py-5 px-5">
      <%= form_for(resource, as: resource_name, url: user_registration_path(resource_name)) do |f| %>
      <%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
        <table class="teble">
          <tr>
            <td><%= f.label :account_name, "アカウント名" %></td>
            <td><%= f.text_field :account_name, autofocus: true, class: "account_name", placeholder:"はじプロ" %></td>
          </tr>
          <tr>
            <td><%= f.label :birthdate, "生年月日" %></td>
            <td><%= f.text_field :birthdate, autofocus: true, class: "birthdate", placeholder:"2000年1月1日→20000101" %></td>
          </tr>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, class: "email", placeholder:"sample@example.com" %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード(6文字以上)" %></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
        </table>
        <div class="actions text-center">
          <%= f.submit "新規登録", class: "btn btn-success text-white" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row mx-auto pt-5">
    <h3>既に登録済みの方</h3>
    <div class="mx-5 my-5">
      <p><%= link_to "こちら", new_user_session_path %>からログインしてください。</p>
    </div>
  </div>
</div>