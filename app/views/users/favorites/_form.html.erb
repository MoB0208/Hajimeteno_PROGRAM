<!--お気に入り登録用-->
  <% if @post.favorited_by?(current_user) %>
    <p>
      <%= link_to favorites_destroy_path(@post), method: :delete do %>
        ♥<%= @post.favorites.count %> お気に入り
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to favorites_create_path(@post), method: :post do %>
        ♡<%= @post.favorites.count %> お気に入り
      <% end %>
    </p>
  <% end %>