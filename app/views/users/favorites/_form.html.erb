<!--お気に入り登録用-->
<%# if post.user == current_user %>
  <!--<p>♡<%#= post.favorites.count %></p>-->
<%# else %>
  <% if post.favorited_by?(current_user) %>
    <p>
      <%= link_to favorite_path(post), method: :delete do %>
        ♥<%= post.favorites.count %>
      <% end %>
    </p>
  <% else %>
    <p>
      <%= link_to favorites_path(post), method: :post do %>
        ♡<%= post.favorites.count %>
      <% end %>
    </p>
  <% end %>
<%# end %>
