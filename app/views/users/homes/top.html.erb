<!--Top画面-->
<div class="container-fluid">
  <div class="bg-white my-5 p-5">
    <!--言語一覧-->
    <% render '/users/genres/info' %>
  </div>

  <div class="bg-white my-5 p-5">
    <!--お気に入りの多い投稿-->
    <% if @favorite_posts %>
      <% @favorite_posts.each do |post| %>
        <%= link_to post.main_code, posts_show_path %>
        <%= post.title %>
        <% render '/favorites/form' %>
      <% end %>
    <% else %>
      <p>現在、お気に入り登録された記事はありません</p>
    <% end %>
  </div>

  <div class="bg-white my-5 p-5">
    <!--最新の投稿-->
    <% if @posts %>
      <% @posts.each do |post| %>
        <%= link_to post.main_code, posts_show_path %>
        <%= post.title %>
        <% render '/favorites/form' %>
      <% end %>
    <% else %>
      <p>最近投稿された記事はありません</p>
    <% end %>
  </div>
</div>