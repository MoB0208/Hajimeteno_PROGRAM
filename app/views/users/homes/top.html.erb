<!--Top画面-->
<div class="container-fluid">
  <div class="row">
    <div class="col-2 rounded bg-white m-5 p-5">
      <!--言語一覧-->
      <%= render '/users/genres/info' %>
    </div>
    <div class="col rounded bg-white my-5 p-5">
      <!--お気に入りの多い記事-->
      <h2>お気に入りの多い記事</h2>
      <% if @favorite_posts.any? %>
        <% @favorite_posts.each do |post| %>
          <div class="rounded bg-light my-3 p-2">
            <h4><%= link_to post.main_code, post_path(post) %></h4>
            <p><%= post.title %></p>
            <p>
              <%= image_tag post.user.get_image, size: "30x30" %>
              <%= post.user.account_name %>
              <%= post.created_at.strftime('%Y/%m/%d') %>
              <%= render '/users/favorites/form', post: post %>
            </p>
          </div>
        <% end %>
      <% else %>
        <p>現在、お気に入り登録された記事はありません。</p>
      <% end %>
    </div>
    <div class="col rounded bg-white m-5 p-5">
      <!--最新の記事-->
      <h2>最新の記事</h2>
      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <div class="rounded bg-light my-3 p-2">
            <h4><%= link_to post.main_code, post_path(post) %></h4>
            <p><%= post.title %></p>
            <p>
              <%= image_tag post.user.get_image, size: "30x30" %>
              <%= post.user.account_name %>
              <%= post.created_at.strftime('%Y/%m/%d') %>
              <%= render '/users/favorites/form', post: post %>
            </p>
          </div>
        <% end %>
      <% else %>
        <p>最近投稿された記事はありません。</p>
      <% end %>
    </div>
  </div>
</div>