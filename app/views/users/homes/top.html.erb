<!--Top画面-->
<div class="container-fluid">
  <div class="row">
    <div class="col-2 rounded bg-white m-5 p-5">
      <!--言語一覧-->
      <%= render '/users/genres/info', genres: @genres %>
    </div>
    <div class="col rounded bg-white my-5 p-5">
      <!--お気に入りの多い記事-->
      <h2>お気に入りの多い記事</h2>
      <% if @favorite_posts.any? %>
        <% @favorite_posts.each do |post| %>
          <!--一覧テンプレート-->
          <%= render '/users/posts/info', post: post %>
        <% end %>
        <div class="text-center">
          <%= paginate @favorite_posts %>
        </div>
      <% else %>
        <p>現在、お気に入り登録された記事はありません。</p>
      <% end %>
    </div>
    <div class="col rounded bg-white m-5 p-5">
      <!--最新の記事-->
      <h2>最新の記事</h2>
      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <!--一覧テンプレート-->
          <%= render '/users/posts/info', post: post %>
        <% end %>
        <div class="text-center">
          <%= paginate @posts %>
        </div>
      <% else %>
        <p>最近投稿された記事はありません。</p>
      <% end %>
    </div>
  </div>
</div>