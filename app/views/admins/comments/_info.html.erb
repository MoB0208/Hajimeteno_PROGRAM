<!--管理者用記事コメント閲覧用-->
<div>
  <div class="text-right">
    <p>コメント件数：<%= @post.comments.count %></p>
  </div>
  <% @post.comments.each do |comment| %>
    <div class="rounded bg-light my-3 p-2">
      <p>
        <%= comment.comment_body %>
        <%= link_to "削除する", admins_comment_path(comment.post, comment), method: :delete, class: "btn btn-danger", data: {confirm: "本当に削除しますか？"}  %>
      </p>
      <p>
        <%= image_tag comment.user.get_image, size: "30x30" %>
        <%= link_to comment.user.account_name, admins_user_path %>
      </p>
      <p><%= comment.created_at.strftime('%Y/%m/%d') %></p>
    </div>
  <% end %>
</div>