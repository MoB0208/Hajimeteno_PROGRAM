<!--管理者用ジャンル名編集-->
<div class="container-fluid">
  <div class="row flex-column m-5 p-5">
    <div class="col-8 rounded bg-white mx-auto p-5">
      <h2><%= @genre.genre_name %>の名前編集</h2>
      <div class="text-center mt-3">
        <%= form_with model: @genre, url: admins_genre_path(@genre),method: :patch do |f| %>
          <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
          <td><%= f.text_field :genre_name, class: "mr-5" %></td>
          <div class="text-center mt-3">
            <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>