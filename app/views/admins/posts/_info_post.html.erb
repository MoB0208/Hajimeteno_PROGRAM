<!--管理者用model:Postの検索結果一覧用-->
<% if post.any? %>
  <% post.each do |post| %>
  <div class="col rounded bg-light my-3 p-2">
    <h4><%= link_to post.main_code, admins_post_path(post) %></h4>
    <p><%= post.title %></p>
    <p>
      <%= image_tag post.user.get_image, size: "50x50" %>
      <%= post.user.account_name %>
      <%= post.created_at.strftime('%Y/%m/%d') %>
    </p>
  </div>
  <% end %>
<% else %>
  <p>該当する記事はありません</p>
<% end %>