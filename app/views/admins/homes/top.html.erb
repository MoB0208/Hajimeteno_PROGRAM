<!--管理者用Top画面-->
<div class="container-fluid">
  <div class="row">
    <div class="col-2 bg-white m-5 p-5">
      <!--言語一覧-->
      <%= render '/admins/genres/info' %>
    </div>
    <div class="col bg-white m-5 p-5">
      <h3>新着記事</h3>
      <% if @posts %>
        <% @posts.each do |post| %>
          <%= link_to post.main_code, admins_posts_show_path(post) %>
          <%= post.title %>
        <% end %>
      <% else %>
        <p>最近投稿された記事はありません</p>
      <% end %>
    </div>
    <div class="col bg-white m-5 p-5">
      <h3>コメント一覧</h3>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <%= link_to comment.comment_body, admins_comments_show_path(comment) %>
          <%= link_to "削除", admins_comments_destroy_path %>
        <% end %>
      <% else %>
        <p>現在、コメントはありません</p>
      <% end %>
    </div>
    <div class="col bg-white m-5 p-5">
      <h3>会員一覧</h3>
      <% if @users %>
        <% @users.each do |user| %>
          <%= link_to user.account_name, admins_users_show_path(user) %>
        <% end %>
      <% else %>
        <p>現在、登録された会員はいません</p>
      <% end %>
    </div>
  </div>
</div>