<!--管理者用会員ステータス変更-->
<div class="container-fluid">
  <div class="row my-5 p-5">
    <div class="col-8 bg-white mx-auto p-5">
      <h3>会員ステータス編集</h3>
      <div class="mt-3">
        <%= form_with model: @user, url: admins_users_update_path(@user) do |f| %>
          <div class="text-center my-5">
            <%= image_tag @user.image, size: "200x200" %>
          </div>
          <table class="table table-bordered mt-3">
            <colgroup>
              <col class="col-md-2">
              <col class="col-md-3">
            </colgroup>
            <tr>
              <td class="text-white" style="background-color: #7868C4;">アカウント名</td>
              <td><%= @user.account_name %></td>
            </tr>
            <tr>
              <td class="text-white" style="background-color: #7868C4;">生年月日</td>
              <td><%= @user.birthdate %></td>
            </tr>
            <tr>
              <td class="text-white" style="background-color: #7868C4;">メールアドレス</td>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <td class="text-white" style="background-color: #7868C4;">ステータス</td>
              <td>
                <%= f.radio_button :status, :true %>
                <p>有効</p>
                <%= f.radio_button :status, :false %>
                <p>利用停止</p>
              </td>
            </tr>
          </table>
          <div class="text-center">
            <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
          </div>
        <% end %>
        <div>
          <%= link_to "戻る", admins_users_show_path(@user), class: "btn btn-sm btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>