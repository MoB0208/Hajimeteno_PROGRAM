<!--管理者用会員情報詳細閲覧用-->
<div class="mt-3">
  <%= flash[:notice] %>
  <div class="text-center my-5">
    <%= image_tag user.image, size: "200x200" %>
  </div>
  <table class="table table-bordered mt-3">
    <colgroup>
      <col class="col-md-2">
      <col class="col-md-3">
    </colgroup>
    <tr>
      <td class="text-white" style="background-color: #7868C4;">アカウント名</td>
      <td><%= user.account_name %></td>
    </tr>
    <tr>
      <td class="text-white" style="background-color: #7868C4;">生年月日</td>
      <td><%= user.birthdate %></td>
    </tr>
    <tr>
      <td class="text-white" style="background-color: #7868C4;">メールアドレス</td>
      <td><%= user.email %></td>
    </tr>
    <tr>
      <td class="text-white" style="background-color: #7868C4;">ステータス</td>
      <td>
        <% if user.status %>
          <span>有効</span>
        <% else %>
          <span>利用停止</span>
        <% end %>
      </td>
    </tr>
  </table>
</div>
<div class="text-center">
  <%= link_to "ステータスを編集する", admins_users_edit_path(user), class: "btn btn-success text-white edit_user_#{user.id}" %>
</div>