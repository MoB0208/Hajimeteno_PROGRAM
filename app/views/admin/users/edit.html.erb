<div class="container-fluid">
  <div class="bg-white my-5 p-5">
    <h3>会員情報編集</h3>
    <div class="mt-3">
      <%= form_with model: @user, url: admin_users_update_path(@user) do |f| %>
        <table class="table table-bordered mt-3">
          <colgroup>
            <col class="col-md-3">
            <col class="col-md-6">
          </colgroup>
          <tr>
            <td class="table-warning">アカウント名</td>
            <td><%= @user.account_name %></td>
          </tr>
          <tr>
            <td class="table-warning">生年月日</td>
            <td><%= @user.birthdate %></td>
          </tr>
          <tr>
            <td class="table-warning">メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td class="table-warning">ステータス</td>
            <td>
              <%= f.radio_button :status, :true %>
              <p>有効</p>
              <%= f.radio_button :status, :false %>
              <p>利用停止</p>
            </td>
          </tr>
        </table>
        <div>
          <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>