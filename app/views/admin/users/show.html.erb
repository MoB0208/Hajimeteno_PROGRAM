<div class="container-fluid">
  <div class="bg-white my-5 p-5">
    <h3>会員情報</h3>
    <div class="mt-3">
      <%= flash[:notice] %>
      <table class="table table-bordered mt-3">
        <colgroup>
          <col class="col-md-3">
          <col class="col-md-6">
        </colgroup>
        <tr>
          <td class="table-warning"></td>
          <td><%= image_tag user.image, size: "200x200" %></td>
        </tr>
        <tr>
          <td class="table-warning">アカウント名</td>
          <td><%= @user.account_name %></td>
        </tr>
        <tr>
          <td class="table-warning">生年月日</td>
          <td><%= @user.birthdate %></td>
        </tr>
        <tr>
          <td class="table-warning">メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td class="table-warning">ステータス</td>
          <td><%= @user.status %></td>
        </tr>
      </table>
    </div>
    <div>
      <%= link_to "編集する", admin_users_edit_path, class: "btn btn-success text-white edit_user_#{@user.id}" %>
    </div>
  </div>
</div>